{
  "name": "node",
  "version": "0.1.7",
  "description": "Module for Sapphire CMS making it run on Node.",
  "scripts": {
    "build": "npm run barrels && swc src --out-dir dist -s  --strip-leading-paths",
    "clean": "rimraf dist",
    "link": "npm link && npm link defectless && npm link @sapphire-cms/core",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "vitest run",
    "barrels": "barrels",
    "start": "npm run barrels && nodemon src/server-example.ts",
    "start:prod": "cross-env NODE_ENV=production node --import @swc-node/register/esm-register src/index.js"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@fastify/accepts": "^5.0.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/middie": "^9.0.3",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@sapphire-cms/core": "0.1.7",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.29",
    "@swc/helpers": "^0.5.17",
    "@tsed/ajv": "^8.9.5",
    "@tsed/barrels": "^6.4.2",
    "@tsed/core": "^8.9.5",
    "@tsed/di": "^8.9.5",
    "@tsed/engines": "^8.9.5",
    "@tsed/exceptions": "^8.9.5",
    "@tsed/json-mapper": "^8.9.5",
    "@tsed/logger": "^7.0.2",
    "@tsed/openspec": "^8.9.5",
    "@tsed/platform-cache": "^8.9.5",
    "@tsed/platform-exceptions": "^8.9.5",
    "@tsed/platform-fastify": "^8.9.5",
    "@tsed/platform-http": "^8.9.5",
    "@tsed/platform-log-request": "^8.9.5",
    "@tsed/platform-middlewares": "^8.9.5",
    "@tsed/platform-params": "^8.9.5",
    "@tsed/platform-response-filter": "^8.9.5",
    "@tsed/platform-views": "^8.9.5",
    "@tsed/schema": "^8.9.5",
    "ajv": "^8.17.1",
    "camelcase-keys": "^9.1.3",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "cross-env": "^7.0.3",
    "defectless": "0.1.7",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "dotenv-flow": "^4.1.0",
    "fastify": "^5.3.3",
    "fastify-raw-body": "^5.0.0",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/content-disposition": "^0.5.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "nodemon": "^3.1.10",
    "tslib": "^2.8.1"
  },
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "bin": {
    "sapphire-node": "dist/sapphire-node.js"
  },
  "author": "Alexei KLENIN",
  "license": "Apache-2.0",
  "homepage": "https://sapphire-cms.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphire-cms/sapphire-cms.git",
    "directory": "packages/node"
  },
  "bugs": {
    "url": "https://github.com/sapphire-cms/sapphire-cms/issues"
  },
  "tsed": {
    "convention": "conv_default",
    "architecture": "arc_default",
    "packageManager": "npm",
    "runtime": "node"
  }
}
